<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!--START FONTAWESOME CSS-->
    <link href="~/fonts/font-awesome/css/all.css" rel="stylesheet" />
    <!--END FONTAWESOME CSS-->
    <!--START PHOTO GALLERY CSS-->
    <link href="~/MDB/VerticalGallery/css/stylesheet.css" rel="stylesheet" />
    <link href="~/MDB/VerticalGallery/css/jquery.fancybox.css" rel="stylesheet" />
    <!--END PHOTO GALLERY CSS-->
    <!--START PAGINATION CSS--><!--END PAGINATION CSS-->
    <!--START MD BOOTSTRAP CSS-->
    <link href="~/MDB/css/bootstrap.css" rel="stylesheet" />
    <link href="~/MDB/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/MDB/css/mdb.min.css" rel="stylesheet" />
    <!--END MD BOOTSTRAP CSS-->
    <!--START DATATABLE CSS-->
    <link href="~/MDB/css/addons/datatables2.min.css" rel="stylesheet" />
    <!--END DATATABLE CSS-->

    <link href="~/MDB/MDB Shop/Ecommerce-Template/css/style.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/MDB/css/style.css" rel="stylesheet" />
</head>
<body class="fixed-sn white-skin">
    @{
        string url = Request.Url.ToString();
        string viewDetailsUrl = "https://localhost:44395/Product/ViewFullDetail/";
        url = url.Remove(url.Length - 1, 1);

        if (Session["Modules"] != null && Request.IsAuthenticated)
        {
            if ((bool)Session["ShopNow"] == false)
            {
                @Html.Partial("~/Views/Shared/_SideMenu.cshtml") @* side menu *@
                @Html.Partial("~/Views/Shared/_Navbar.cshtml") @* top navigation bar *@
            }
            else
            {
                if (url != viewDetailsUrl)
                {
                    @Html.Partial("~/Views/Shared/_NavbarShop.cshtml")
                }
                else
                {
                    @Html.Partial("~/Views/Shared/_NavbarTop.cshtml")
                }
            }
        }
        else
        {
            if (url != viewDetailsUrl)
            {
                @Html.Partial("~/Views/Shared/_NavbarShop.cshtml")
            }
            else
            {
                @Html.Partial("~/Views/Shared/_NavbarTop.cshtml")
            }
        }
    }

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <!--START MD BOOTSTRAP JS-->
    <script src="~/MDB/js/jquery-3.3.1.min.js"></script>
    <script src="~/MDB/js/popper.min.js"></script>
    <script src="~/MDB/js/bootstrap.js"></script>
    <script src="~/MDB/js/bootstrap.min.js"></script>
    <script src="~/MDB/js/mdb.min.js"></script>
    <!--END MD BOOTSTRAP JS-->
    <!--START UNOBTRUSSIVE AJAX JS-->
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <!--END UNOBTRUSSIVE AJAX JS-->
    <!--START PAGINATION JS--><!--END PAGINATION JS-->
    <!--START DATATABLE JS-->
    <script src="~/MDB/js/addons/datatables2.min.js"></script>
    <!--END DATATABLE JS-->
    <!--START MOMENT JS-->
    <script src="~/Scripts/moment.js"></script>
    <!--END MOMENT JS-->
    <!--START PHOTO GALLERY JS-->
    <script src="~/MDB/VerticalGallery/js/jquery.fancybox.js"></script>
    <!--END PHOTO GALLERY JS-->
    <!--START CUSTOM JS-->
    <script src="~/Scripts/Custom_Scripts/Ajax.js"></script>
    <script src="~/Scripts/Custom_Scripts/Main_Scripts/Datatable.js"></script>
    <script src="~/Scripts/Custom_Scripts/Loader.js"></script>

    <script src="~/Scripts/Custom_Scripts/Dashboard.js"></script>
    <script src="~/Scripts/Custom_Scripts/Category.js"></script>
    <script src="~/Scripts/Custom_Scripts/Product.js"></script>
    <script src="~/Scripts/Custom_Scripts/Color.js"></script>
    <script src="~/Scripts/Custom_Scripts/Size.js"></script>
    <script src="~/Scripts/Custom_Scripts/Brand.js"></script>
    <!--END CUSTOM JS-->

    <script>
        // Animations initialization
        new WOW().init();

        // SideNav Initialization
        $(".button-collapse").sideNav();

        var container = document.querySelector('.custom-scrollbar');
        Ps.initialize(container, {
            wheelSpeed: 2,
            wheelPropagation: true,
            minScrollbarLength: 20
        });

        // Tooltips Initialization
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>

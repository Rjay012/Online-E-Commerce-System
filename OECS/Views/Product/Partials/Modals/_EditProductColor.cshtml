                <th>1</th>
                <th>2</th>
                <th>3</th>
                <th>4</th>
                <th>5</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>Images</td>
                <td class="text-center">
                    <label>
                        <input class="edit-img-input" type="file" id="fileEdit1" style="display: none" />
                        <img class="img-display" src="~/Images/AddImageIcon/add-image-icon.png" id="imgEdit1" />
                    </label>
                </td>
                <td class="text-center">
                    <label>
                        <input class="edit-img-input" type="file" id="fileEdit2" style="display: none" />
                        <img class="img-display" src="~/Images/AddImageIcon/add-image-icon.png" id="imgEdit2" />
                    </label>
                </td>
                <td class="text-center">
                    <label>
                        <input class="edit-img-input" type="file" id="fileEdit3" style="display: none" />
                        <img class="img-display" src="~/Images/AddImageIcon/add-image-icon.png" id="imgEdit3" />
                    </label>
                </td>
                <td class="text-center">
                    <label>
                        <input class="edit-img-input" type="file" id="fileEdit4" style="display: none" />
                        <img class="img-display" src="~/Images/AddImageIcon/add-image-icon.png" id="imgEdit4" />
                    </label>
                </td>
                <td class="text-center">
                    <label>
                        <input class="edit-img-input" type="file" id="fileEdit5" style="display: none" />
                        <img class="img-display" src="~/Images/AddImageIcon/add-image-icon.png" id="imgEdit5" />
                    </label>
                </td>
            </tr>
            <tr>
                <td>Set Us Color Display</td>
                <td class="text-center">
                    <div class="custom-control custom-radio">
                        <input type="radio" class="custom-control-input" id="isDisplayEditImg1" name="isDisplayEditImg" />

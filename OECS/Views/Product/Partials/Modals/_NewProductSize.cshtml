@model OECS.Models.ProductModels.ProductSizeModel
@using (Ajax.BeginForm("", "Product", new AjaxOptions { HttpMethod = "POST", OnSuccess = "success(data)" }))
{
    <div class="modal-header">
        <h5 class="modal-title">New Size</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.DropDownListFor(s => s.SizeID, Model.SizeLists, "Select Size", new { @class = "browser-default mdb-select form-control mb-4" })
    </div>
    <div class="modal-footer">
        <button class="d-none" type="submit" id="BtnConfirmSaveNewSize"></button>
        <button class="btn btn-primary" type="button" id="BtnSaveNewSize">Save</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </div>
}